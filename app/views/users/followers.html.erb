<div class="container">
    <div class="row">
        <div class="col">
            <h2>Follow Users</h2>
            <% if @users.empty? %>
                <span>ユーザーはいません</span>
            <% else%>
                <table class="table">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                            <% @users.each do |user|%>
                        <tr>
                            <td><%= attachment_image_tag(user, :profile_image,:fill,50,50, fallback: "no_image.jpg") %></td>
                            <td><%= user.name %></td>
                            <td><%= "フォロー数: #{user.followers.count}" %></td>
                            <td><%= "フォロワー数: #{user.followeds.count}" %></td>
                            <td><%= link_to 'Show',user_path(user) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </div>
    </div>
</div>